@model UserRoleViewModel

@{
    ViewData["Title"] = "Edit";
}


<h1>Edit @Model.UserName</h1>
<hr />
<div class="container">
    <form method="post" asp-action="Edit">
        <input type="hidden" asp-for="UserId" />
        <div>
            <label asp-for="UserName" class="col-form-label"></label>
            <input asp-for ="UserName" class="form-control" disabled />
        </div>

        <h3>Manage user roles</h3>
        <hr />
        @for (int i = 0; i < Model.Roles.Count; i++)
        {
            <div>
                <input type="hidden" asp-for="Roles[i].Id" />
                <input type="hidden" asp-for="Roles[i].Name" />

                <label class="col-form-label">
                    <input asp-for="Roles[i].IsSelected" class="form-check-input" />
                    @Model.Roles[i].Name
                </label>
            </div>
        }
        <br />
        <input type="submit" value="Save" class="btn btn-success" />
        <a asp-action="Index" class="btn btn-primary">Back to index page</a>
    </form>
</div>